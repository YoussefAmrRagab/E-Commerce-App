<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ebeaef"
    android:orientation="vertical"
    >
<RelativeLayout
    android:layout_marginTop="-25dp"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/angle_left_24" />
    <TextView
        android:id="@+id/search"
        android:layout_marginTop="53dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Search Product"
        android:fontFamily="@font/poppins_bold"
        android:layout_gravity="center"
        android:textColor="#323232"
        />

    <ImageView
        android:layout_toRightOf="@+id/search"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="48dp"
        android:id="@+id/img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/man" />

    <EditText
        android:id="@+id/search_bar"
        android:layout_marginTop="110dp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:drawableTint="#676767"
        android:drawableLeft="@drawable/search_20"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:hint="Search"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:background="@drawable/background"
        />
    <ImageButton
        android:layout_marginLeft="15dp"
        android:layout_marginTop="110dp"
        android:layout_toRightOf="@+id/search_bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/settings_sliders_20"
        android:background="@drawable/background"
        />

</RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:focusable="auto"
        android:id="@+id/Recycler"
        android:layout_marginTop="10dp"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"></androidx.recyclerview.widget.RecyclerView>

</LinearLayout>