<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
   >

    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_keyboard_backspace_24"
        android:backgroundTint="@color/white"
         />

    <androidx.cardview.widget.CardView
        android:id="@+id/img"
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:layout_marginTop="-10dp"
        android:layout_marginRight="-10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="80dp">

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iss_auto_cycle="true"
            app:iss_period="1000"
            app:iss_delay="0"
            android:background="#242424"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:autoSizeTextType="none"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/img"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="25dp"
        />

    <TextView
        android:autoSizeTextType="uniform"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/title"
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="price"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <ImageView
        android:translationY="8dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/price"
        android:id="@+id/star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/star_24" />

    <TextView
        android:translationY="8dp"
        android:layout_below="@id/price"
        android:layout_toRightOf="@+id/star"
        android:id="@+id/rate"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="star rates"
        android:textColor="@color/black"
        android:textSize="14dp" />

        <TextView
            android:layout_below="@+id/price"
            android:id="@+id/reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:translationY="8dp"
            android:layout_toRightOf="@+id/rate"
            android:text="(reviews)"
            android:textColor="#787878"
            android:textSize="12dp" />

        <ImageButton
            android:translationY="4dp"
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/reviews"
            android:background="@drawable/backgroun_btn2"
            android:src="@drawable/ic_baseline_add_24" />

        <TextView
            android:translationY="5dp"
            android:layout_below="@+id/price"
            android:layout_marginLeft="35dp"
            android:id="@+id/cont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/add"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <ImageButton
            android:id="@+id/remove"
            android:translationY="4dp"
            android:layout_marginLeft="35dp"
            android:layout_below="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cont"
            android:background="@drawable/backgroun_btn2"
            android:src="@drawable/ic_baseline_remove_24" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/des"
        android:layout_below="@+id/star"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoSizeTextType="uniform"
        android:textColor="#4E4E4E"
        android:fontFamily="@font/poppins_light"
        android:textSize="16dp"
        />


    <ImageButton
        android:layout_marginTop="20dp"
        android:layout_below="@+id/des"
        android:layout_marginLeft="25dp"
        android:id="@+id/fav"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/background_bookmark"
        android:src="@drawable/ic_baseline_bookmark_border_24"
       />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/fav"
        android:background="@drawable/background_btn"
        android:backgroundTint="@color/black"
        android:src="@drawable/ic_baseline_bookmark_border_24"
        android:text="Add To Cart"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/des"
        />

</RelativeLayout>